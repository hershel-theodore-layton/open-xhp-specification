{
  "name": "hershel-theodore-layton/open-xhp-specification",
  "description": "An ad hoc specification of the behaviors of xhp-lib and sgml-stream.",
  "require": {
    "hhvm": "^4.102"
  },
  "require-dev": {
    "hhvm/hhvm-autoload": "^3.2",
    "hhvm/hacktest": "^2.3",
    "facebook/fbexpect": "^2.8",
    "facebook/xhp-lib": "^4.0",
    "hershel-theodore-layton/sgml-stream-interfaces": "dev-master",
    "hershel-theodore-layton/sgml-stream": "dev-master"
  },
  "scripts": {
    "post-install-cmd": [
      "rm vendor/autoload.php vendor/composer/*.php"
    ],
    "post-update-cmd": [
      "rm vendor/autoload.php vendor/composer/*.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "hhvm/hhvm-autoload": true
    }
  }
}
